<head>
<link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
</head>

<header>
  <h1>Cool Blog</h1>
</header>


  <div id="showTags">
    <% array = @tag.posts %>
    <% names = array.map{ |post| post.name } %>
    <% authors = array.map{ |post| post.author } %>
    <% content = array.map{ |post| post.content } %>
    <% i = 0 %>

    <% while i < array.length  do %>
      <h2><%= names[i] %><br></h2>
      <%= authors[i]%><br>
      <%= content[i]%><br>
      <% i+= 1 %>
    <% end %>

  <p><%= @tag.posts.count %> posts have been marked with this tag.</p>
</div>


<div class="links">
  <a href="/posts">View all posts</a> <br>
  <a href="/tags">View all tags</a>
</div>
